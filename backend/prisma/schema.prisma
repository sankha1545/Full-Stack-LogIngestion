// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


enum Role {
  MASTER_ADMIN
  USER
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String?
  role      Role     @default(USER)
  provider  String   @default("credentials")
  createdAt DateTime @default(now())
}
